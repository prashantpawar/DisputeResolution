{
  "extends": "airbnb",
  "rules" : {
    "prefer-arrow-callback": [
      "error",
      {
        "allowNamedFunctions": true,
        "allowUnboundThis": true
      }
    ],
    "no-console" : [
      "error",
      {
        "allow": [
          "warn",
          "error",
          "info"
        ]
      }
    ]
  },
  "globals": {
    "artifacts": false,
    "document": false,
    "web3": true,
    "window": false,
    "contract": false,
    "it": false,
    "assert": false
  }
}
